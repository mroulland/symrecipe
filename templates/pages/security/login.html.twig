{% extends 'base.html.twig' %}

{% block title %}Symrecipe - Connexion{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Formulaire de connexion</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{path('security.login')}}" method="POST">
            <div class="form-group">
                <label for="username" class="form-label mt-4">Adresse email</label>
                <input type="email" name="_username" class="form-control" id="username" placeholder="exemple@symrecipe.fr" value="{{ last_username }}">
                <small id="emailHelp" class="form-text text-muted">Nous ne partageons pas votre email avec qui que ce soit.</small>
            </div>
            <div class="form-group">
                <label for="password" class="form-label mt-4">Mot de passe</label>
                <input type="password" name="_password"class="form-control" id="password" placeholder="********" autocomplete="off">
            </div>

            <button class="btn btn-primary mt-4" type="submit">Se connecter</button>
        </form>
    </div>
{% endblock %}
